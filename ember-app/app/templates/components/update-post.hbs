{{#if updatePostForm}}
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=post.title class="form-control"}}
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        {{textarea value=content id="content" placeholder=post.content class="form-control"}}
      </div>
      <button class="btn btn-primary" {{action 'update' post}}>Save</button>
    </form>
  </div>
{{else}}
  <button type="button" class="btn btn-success" {{action 'updatePostForm'}}>Update</button>
{{/if}}
